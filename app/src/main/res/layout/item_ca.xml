<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/titulo"
            android:layout_marginStart="11dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription,RtlCompat" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="234dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="27dp"
            android:text="Titulo Frase"
            android:textAlignment="inherit"
            android:textSize="20dp"
            android:textColor="@color/purpura"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/artista"
            android:layout_width="187dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/img"
            android:layout_alignStart="@+id/titulo"
            android:text="Titulo 2"
            android:textAlignment="inherit"
            android:textColor="@color/gris"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>