<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/imffffpsd"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/buttonplay"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="59dp"
            android:layout_marginEnd="131dp"
            android:background="@drawable/descarga10"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteY="439dp" />

        <Button
            android:id="@+id/buttonatras"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/buttonplay"
            android:layout_toStartOf="@+id/buttonplay"
            android:background="@drawable/descarga1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteY="439dp" />

        <Button
            android:id="@+id/buttondelante"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/buttonplay"
            android:layout_marginStart="-131dp"
            android:layout_toEndOf="@+id/buttonplay"
            android:background="@drawable/descarga2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteY="439dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="53dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cd"
            tools:ignore="ContentDescription,RtlCompat" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>